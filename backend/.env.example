# ============================================================================
# Environment Configuration Template
# Copy this file to .env and fill in your values
# ============================================================================

# -------------------- Application Settings --------------------
APP_NAME="SummarizerAI Backend"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL="INFO"

# -------------------- Server Configuration --------------------
HOST="0.0.0.0"
PORT=8000

# -------------------- CORS Settings --------------------
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,https://summarizerai.vercel.app"

# -------------------- File Upload --------------------
UPLOAD_DIR="uploads"
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
FAISS_INDEX_DIR="faiss_indices"

# -------------------- ML Service Configuration --------------------
# Leave empty to use direct imports, or set URL for separate ML microservice
ML_SERVICE_URL=""

# Embeddings model from HuggingFace
EMBEDDINGS_MODEL="sentence-transformers/all-mpnet-base-v2"

# -------------------- LLM Configuration --------------------
# OpenAI API (if using GPT models)
OPENAI_API_KEY="your-openai-api-key-here"
LLM_MODEL="gpt-3.5-turbo"
LLM_TEMPERATURE=0.7
MAX_TOKENS=1000

# For open-source models (HuggingFace)
# HF_TOKEN="your-huggingface-token-here"

# -------------------- Database (Optional - Future) --------------------
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/summarizerai"
# DATABASE_URL="mongodb://localhost:27017/summarizerai"

# -------------------- Cloud Storage (Optional) --------------------
# Firebase credentials path
# FIREBASE_CREDENTIALS_PATH="path/to/firebase-credentials.json"

# Google Cloud Storage
# GOOGLE_APPLICATION_CREDENTIALS="path/to/gcp-credentials.json"
# GCS_BUCKET_NAME="summarizerai-documents"

# -------------------- Redis (Optional - for caching) --------------------
# REDIS_URL="redis://localhost:6379/0"

# -------------------- Monitoring & Analytics (Optional) --------------------
# SENTRY_DSN="your-sentry-dsn-here"

# -------------------- Security --------------------
# SECRET_KEY="your-secret-key-here-generate-with-openssl-rand-hex-32"
# ALGORITHM="HS256"
# ACCESS_TOKEN_EXPIRE_MINUTES=30
